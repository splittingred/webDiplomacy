<div class="titleBar">
    <div class="titleBarRightSide">
        <div class="gameTimeRemaining">
            {% if board.game.isFinished() %}
                <span class="gameTimeRemainingNextPhase">Finished:</span> {{ board.getProcessedTimeAsText()|raw }}
            {% elseif board.game.isPaused() %}
                Paused <img src="/images/icons/pause.png" title="Game paused" />
                ({{ board.getPausedTimeRemainingAsText() }} left on unpause)
            {% elseif board.game.isCrashed() %}
                Crashed
            {% else %}
                {% if board.game.isPreGame() %}
                    <span class="gameTimeRemainingNextPhase">Start:</span>
                {% else %}
                    <span class="gameTimeRemainingNextPhase">Next:</span>
                {% endif %}
                {{ board.getNextProcessTime()|raw }} ({{ board.getProcessedTimeAsText()|raw }})
            {% endif %}
        </div>
    </div>

    <div class="titleBarLeftSide">
        {% include 'games/icons.twig' with { game: board.game } %}
        <span class="gameName">{{ board.game.name }}</span>
    </div>

    <div class="clear-both"></div>

    <div class="titleBarRightSide">
        <div>
            <span class="gameHoursPerPhase">
                <strong>{{ board.getHoursPerPhase() }}</strong> /phase
            </span>
            {{ board.game.getPhaseSwitchAsText()|raw }}
        </div>
    </div>

    <div class="titleBarLeftSide">
        <div>
            Pot:
            <span class="gamePot">{{ board.game.pot }} {{ board.getPointsIcon()|raw }}</span>
            - <span class="gameDate">{{ board.getPhaseAsText() }}</span>,
              <span class="gamePhase">{{ board.game.phase }}</span>
        </div>
        <div>
            <div class="titleBarLeftSide">
                <span class="gamePotType">{{ board.game.getVariantNames()|join(', ')|raw }}</span>
            </div>
        </div>
    </div>

    <div class="clear-both"></div>

    <div class="titleBarRightSide">
        <span class="excusedNMRs">{{ board.game.excusedMissedTurns }}</span> excused missed turn
    </div>

    <div class="clear-both"></div>
</div>