<a id="chatboxanchor"></a>
<a id="chatbox"></a>

{{ tabs|raw }}

<div class="chatWrapper">
    {{ memberNames|raw }}

    <div id="chatboxscroll" class="chatbox">
        <table class="chatbox">
            {% if messages|length <= 0 %}
                <tr class="barAlt1">
                    <td class="notice">No messages yet posted.</td>
                </tr>
            {% else %}
                {{ messages|raw }}
            {% endif %}
        </table>
    </div>
</div>
{{ form|raw }}

<script>
let cbs = $('chatboxscroll');
cbs.scrollTop = cbs.scrollHeight;
// Don't focus the chatbox if the user is entering orders
// if request msgCountryID
let sb = $('sendbox');
if (sb != null && !Object.isUndefined(sb)) { sb.focus(); }
</script>
