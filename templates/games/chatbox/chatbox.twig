<a id="chatboxanchor"></a>
<a id="chatbox"></a>

{{ tabs }}

<div class="chatWrapper">
    <div class="chatbox{% if not currentMember %} chatboxnotabs{% endif %}">
        <table class="chatbox">
            <tr class="barAlt2 membersList">
                <td>
                    {% if global %}
                    <div class="chatboxMembersList">
                        {% for member in members %}
                            {{ member }}
                        {% endif %}
                    </div>
                    {% else %}
                        {{ targetMemberBar }}
                    {% endif %}
                </td>
            </tr>
        </table>
    </div>

    <div id="chatboxscroll" class="chatbox">
        <table class="chatbox">
            {% if messages|length <= 0 %}
                <tr class="barAlt1">
                    <td class="notice">No messages yet posted.</td>
                </tr>
            {% else %}
                {{ messages }}
            {% end %}
        </table>
    </div>
</div>
{{ form }}

<script>
let cbs = $('chatboxscroll');
cbs.scrollTop = cbs.scrollHeight;
// Don't focus the chatbox if the user is entering orders
// if request msgCountryID
let sb = $('sendbox');
if (sb != null && !Object.isUndefined(sb)) { sb.focus(); }
</script>
