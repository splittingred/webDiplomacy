<form action="/users/forgot" method="post">
    <div class="form-group">
        <label for="fp-username">Username</label>
        <input type="text" tabindex="1" maxlength="30" class="form-control" name="username" id="fp-username" value="{{ values.username }}"/>
    </div>

    <button type="submit" class="btn btn-primary green-Submit" tabindex="2">Send Reset Password Confirmation</button>
</form>