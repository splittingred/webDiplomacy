<div id="messagebox">
    <form id="{{ id }}" action="/users/messages?user_id={{ user.id }}#messagebox" method="post">

        {{ fields.user_id|raw }}

        {% include 'common/notice.twig' with { notice: notice } %}

        {{ fields.message|raw }}

        <div class="form-group">
            <button id="user-pm-submit" type="submit" class="btn btn-primary green-Submit" style="width: 20%">Send PM</button>
        </div>
    </form>
</div>