<form action="/users/forgot-confirmation" method="post">
    {% include 'common/notice.twig' with { notice: notice } %}

    <input type="hidden" name="user_id" value="{{ user_id }}" />
    <input type="hidden" name="token" value="{{ token }}" />

    <div class="form-group">
        <label for="fpc-old-password">Old Password</label>
        <input type="password" tabindex="1" maxlength="30" class="form-control" name="old_password" id="fpc-old-password" value="" />
    </div>

    <div class="form-group">
        <label for="fpc-new-password">New Password</label>
        <input type="password" tabindex="2" maxlength="30" class="form-control" name="new_password" id="fpc-new-password" value="" />
    </div>

    <div class="form-group">
        <label for="fpc-new-password-confirm">Confirm New Password</label>
        <input type="password" tabindex="3" maxlength="30" class="form-control" name="new_password_confirm" id="fpc-new-password-confirm" value="" />
    </div>

    <button type="submit" class="btn btn-primary green-Submit" tabindex="4">Change Password</button>
</form>