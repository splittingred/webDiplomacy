<form method="post" action="/games/new" class="new-game-form">
    <div class="form-group">
        <label for="ng-name">Game Name:</label>
        <input id="ng-name" type="text" name="newGame[name]" value="{{ values.name }}" size="30" class="form-control" />
    </div>

    <div class="form-group">
        <label for="ng-bet">Bet size: (5-{{ current_user.points }}{{ current_user.pointsIcon }})</label>
        <img id="ng-bet-help"
             tabindex="0"
             role="button"
             title="Bet"
             data-toggle="popover"
             data-trigger="hover"
             data-html="true"
             data-content="The bet required to join this game. This is the amount of points that all players, including you, must put into the game's pot (<a href='/help/points' class='light'>read more</a>)."
             class="help-btn"
             src="/images/icons/help.png"
             alt="Help"
        />
        <input id="ng-bet" type="text" name="newGame[bet]" size="7" value="{{ values.bet }}" class="form-control" />
    </div>

    <div class="form-group">
        <label for="ng-phase-minutes">Phase length: (5 min - 10 days)</label>
        <img id="ng-phase-minutes-help"
             tabindex="0"
             role="button"
             title="Phase Length"
             data-toggle="popover"
             data-trigger="hover"
             data-html="true"
             data-content="How long each phase of the game will last in hours. Longer phase hours means a slow game with more time to talk. Shorter phases require players be available to check the game frequently."
             class="help-btn"
             src="/images/icons/help.png"
             alt="Help"
        />
        <select name="newGame[phaseMinutes]" id="ng-phase-minutes" class="form-control">
            {% for phaseLength, phaseLengthText in phaseLengths %}
            <option value="{{ phaseLength }}">{{ phaseLengthText }}</option>
            {% endfor %}
        </select>
    </div>

    <div class="form-group">
        <label for="ng-phase-switch-period">Time Until Phase Swap</label>
        <select id="ng-phase-switch-period" name="newGame[phaseSwitchPeriod]" class="form-control">
            <option value="-1"{% if values.phaseSwitchPeriod == -1 %} selected="selected"{% endif %}> No phase switch</option>
            {% for period, periodText in phaseSwitchPeriods %}
                <option value="{{ period }}">{{ periodText }}</option>
            {% endfor %}
        </select>
    </div>

    <div class="form-group" id="nextPhaseMinutesPara">
        <label for="ng-next-phase-minutes">Phase Length After Swap</label>
        <select id="ng-next-phase-minutes" name="newGame[nextPhaseMinutes]" class="form-control">
            {% for nextPhaseMinutes, nextPhaseMinutesText in nextPhasePeriods %}
                <option value="{{ nextPhaseMinutes }}">{{ nextPhaseMinutesText }}</option>
            {% endfor %}
        </select>
    </div>

    <div class="form-group">
        <label for="ng-join-period">Time to Fill Game: (5 min - 14 days)</label>
        <select id="ng-join-period" name="newGame[joinPeriod]" class="form-control">
            {% for joinPeriod, joinPeriodText in joinPeriods %}
                <option value="{{ joinPeriod }}">{{ joinPeriodText }}</option>
            {% endfor %}
        </select>
    </div>

    <div class="form-group">
        <label for="ng-press-type">Game Messaging:</label>
        <img id="ng-press-type-help"
             tabindex="0"
             role="button"
             title="Press Type"
             data-toggle="popover"
             data-trigger="hover"
             data-html="true"
             data-content="The type of messaging allowed in a game.<br />
                    All: Global and Private Messaging allowed.<br />
                    Global Only: Only Global Messaging allowed.<br />
                    None: No messaging allowed.<br />
                    Rulebook: No messaging allowed during build and retreat phases."
             class="help-btn"
             src="/images/icons/help.png"
             alt="Help"
        />
        <select id="ng-press-type" name="newGame[pressType]" class="form-control">
            <option value="Regular" selected="selected">All </option>
            <option value="PublicPressOnly">Global only</option>
            <option value="NoPress">None (No messaging)</option>
            <option value="RulebookPress">Per rulebook</option>
        </select>
    </div>

    <div class="form-group">
        <label for="ng-variant">Variant type (map choices):</label>
        <img id="ng-variant-help"
             tabindex="0"
             role="button"
             title="Variant"
             data-toggle="popover"
             data-html="true"
             data-content="<p>Type of Diplomacy game from a selection of maps and alternate rule settings available. Click any of the variant names to view the details on the variants page.</p>
                    <p><strong>Available variants:</strong></p>
                    <ul class='variants'>
                    {% for variant in variants %}
                        <li class='variant{{ variant.name }}'>{{ variant.link }}</li>
                    {% endfor %}
                    </ul>
                    <p>Please note that 1 vs 1 games will default to a 5 point bet as an unranked game no matter what bet/game type are selected.</p>"
             class="help-btn"
             src="/images/icons/help.png"
             alt="Help"
        />
        <select id="ng-variant" name="newGame[variantID]" class="form-control">
            {% for variant in variants %}
                <option name="newGame[variantID]" value="{{ variant.id }}">{{ variant.name }}</option>
            {% endfor %}
        </select>
    </div>

