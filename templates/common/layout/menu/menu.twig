<header id="header">
    <div id="header-container">
        <a href="../header">
            <img id="logo" src="images/logo.png" alt="webDiplomacy" />
        </a>
        <div>
            <div id="header-welcome">
                {% if authenticated %}
                Welcome, {{ user_profile_link|raw }}
                <span class="logon">
                    <a href="/users/logout" class="light">Logout</a>
                    {% if admin_user_switch %}
                        - <a href="/index.php?auid=0" class="light">Switch back</a>
                    {% endif %}
                </span>
                {% else %}
                    Welcome, Guest
                    <a href="/users/login" class="light">Log in</a>
                {% endif %}
            </div>

            <div class="container-fluid">
                <nav class="navbar navbar-expand-sm" id="main-nav" role="navigation">
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        {{ menu|raw }}
                    </div>
                </nav>
            </div>
        </div>
    </div>
</header>
<div id="seperator"></div>
<div id="seperator-fixed"></div>